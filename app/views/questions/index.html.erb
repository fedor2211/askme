<div class="container">
  <h2 class="title-lg mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render "users/user_avatar", user: user %>
    <% end %>
  </div>
</div>

<div class="container mt">
  <h2 class="title-lg mb-md">Все теги</h2>
  <%= render @hashtags %>
</div>

<div class="container mt">
  <h2 class="title-lg mb-md">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
  <% @questions.each do |question| %>
    <div class="mb-lg">
      <h2 class="title-sm mb"><%= question_link question %></h2>
      <%= render question %>
      <span class="text-bold">Теги:</span>
      <%= render question.hashtags %>
    </div>
  <% end %>
</div>
